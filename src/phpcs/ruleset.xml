<?xml version="1.0"?>
<ruleset name="CustomStandard">

	<rule ref="PSR12">
		<!-- インデントにタブを使用してはならない｜タブを使用する -->
		<exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
		<!-- クラスにはnamespaceを記述しなければならない｜どちらでもよい -->
		<exclude name="PSR1.Classes.ClassDeclaration"/>
		<!-- クラス名はパスカルケースにしなければならない｜単語の先頭が大文字のスネークケースにする -->
		<exclude name="Squiz.Classes.ValidClassName"/>
		<!-- メソッド名はキャメルケースにしなければならない｜スネークケースにする -->
		<exclude name="PSR1.Methods.CamelCapsMethodName"/>
		<!-- プロパティ名の先頭にアンダースコアをつけてはならない｜基本禁止だけどフレームワークの機能のみ許可（Modelの$_table_nameなど） -->
		<exclude name="PSR2.Classes.PropertyDeclaration"/>
	</rule>

	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
	<rule ref="Generic.WhiteSpace.ScopeIndent">
		<properties>
			<property name="indent" value="4"/>
			<property name="tabIndent" value="true"/>
		</properties>
	</rule>

</ruleset>